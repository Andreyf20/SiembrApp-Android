<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.userinfo.UserInfo"
    android:backgroundTint="@color/White">

    <ImageButton
        android:id="@+id/atrasBtn5"
        android:layout_width="45dp"
        android:layout_height="53dp"
        android:layout_marginStart="4dp"
        android:backgroundTint="@color/White"
        android:tint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        app:srcCompat="@drawable/abc_vector_test" />

    <LinearLayout
        android:id="@+id/user_info_linearLayout"
        android:layout_width="292dp"
        android:layout_height="137dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/user_info_username_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NAME"
            android:textColor="@color/colorPrimary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_info_email_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EMAIL" />

        <Space
            android:layout_width="1dp"
            android:layout_height="40dp" />

        <TextView
            android:id="@+id/user_info_aditionalinfo_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XD" />

        <TextView
            android:id="@+id/user_info_edit_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/edit_user_info"
            android:textSize="12sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>