<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".ui.register.RegisterActivity_Step_2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:backgroundTint="@color/White">

        <ImageButton
            android:id="@+id/atrasBtn"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:backgroundTint="@color/White"
            android:tint="@color/colorPrimary"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/abc_vector_test" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="320dp"
            android:layout_height="55dp"
            android:text="@string/registerHeading"
            android:textAlignment="textStart"
            android:textColor="@color/colorPrimary"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/atrasBtn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/trabajoChoiceBtn"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@color/White"
        android:elevation="2dp"
        android:text="@string/trabajoLbl"
        android:textColor="@color/colorPrimary"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <Button
        android:id="@+id/otroChoiceBtn"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="316dp"
        android:background="@color/White"
        android:elevation="2dp"
        android:text="@string/otroLbl"
        android:textColor="@color/colorPrimary"
        android:translationZ="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/campannaChoiceBtn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/campannaChoiceBtn"
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:background="@color/White"
        android:elevation="2dp"
        android:text="@string/campanna"
        android:textColor="@color/colorPrimary"
        android:translationZ="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/trabajoChoiceBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>